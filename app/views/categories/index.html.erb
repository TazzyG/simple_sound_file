
  

<% if @categories.count < 1%> 

<div class= "text-center" id= "imagination">

<h1> There are no categories yet! Let's get started </h1>
<%= link_to "New Category", new_category_path, class: "btn btn-xl btn-primary" %>

</div>
<% else %>

<div class = "row" id: "transparent">
  <div class = "col-md-offset-2 col-md-8">
    <% @categories.each do |category| %>
    <div id= "category" class= "row text-center">
      <%= link_to category_path(category) do %>
         <h2><i class="<%= category.icon %>"><br> <%= category.name %></i></h2>
      <% end %> 
    </div>
    <div class= "well">
      <% category.words.each do |word| %>
        <%= link_to word.english, word,  class: "categories btn btn-lg btn-default" %>
      <% end %>
    </div>
    <% end %>   
  </div>
</div>

<% end %>