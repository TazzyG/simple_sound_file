
  

<div class = "row">
  <div class = "col-md-offset-2 col-md-8">
    <% @categories.each do |category| %>
    <div class= "row text-center">
      <%= link_to category_path(category) do %>
         <h2><i class="<%= category.icon %>"><br> <%= category.name %></i></h2>
      <% end %> 
    </div>
    <div class= "well">
      <% category.words.each do |word| %>
        <%= link_to word.english, word,  class: "categories btn btn-lg btn-default" %>
      <% end %>
    </div>
    <% end %>   
  </div>
</div>

